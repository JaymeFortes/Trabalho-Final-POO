<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aplicacao.ACMEAirDrones">
    <children>
        <AnchorPane VBox.vgrow="ALWAYS">
            <children>
                <Label layoutX="221.0" layoutY="14.0" prefHeight="37.0" prefWidth="159.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="ACME AirDrones" textAlignment="CENTER">
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor></Label>
                <Button fx:id="btnCadastroDrone" layoutX="14.0" layoutY="74.0" onAction="#abrirTelaCadastroDrone" prefHeight="25.0" prefWidth="150.0" text="Cadastro de Drones">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
                <Button fx:id="btnCadastroTransporte" layoutX="174.0" layoutY="74.0" onAction="#abrirTelaCadastroTransporte" prefHeight="25.0" prefWidth="150.0" text="Cadastro de Transporte">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
                <Button fx:id="btnSair" layoutX="436.0" layoutY="361.0" onAction="#sairSistema" prefHeight="25.0" prefWidth="150.0" text="Sair">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
                <Button layoutX="14.0" layoutY="169.0" mnemonicParsing="false" onAction="#abrirTelaRelatorioGeral" prefHeight="25.0" prefWidth="150.0" text="Mostrar relatório geral">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
                <Button layoutX="14.0" layoutY="121.0" mnemonicParsing="false" onAction="#processarTransportesPendentesAction" prefHeight="25.0" prefWidth="194.0" text="Processar Transportes Pendentes">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
                <Button layoutX="174.0" layoutY="169.0" mnemonicParsing="false" onAction="#abrirTodosTransportes" prefHeight="25.0" prefWidth="175.0" text="Mostrar Todos os Transportes">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
                <Button layoutX="14.0" layoutY="217.0" mnemonicParsing="false" onAction="#abrirAlterarSituacao" prefHeight="25.0" prefWidth="225.0" text="Alterar Situação Transporte">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
                <Button layoutX="14.0" layoutY="266.0" mnemonicParsing="false"   onAction="#abrirDadosSimulacao"       prefHeight="25.0" prefWidth="225.0" text="Realizar Leitura de Dados de Simulação">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
                <Button layoutX="225.0" layoutY="361.0" mnemonicParsing="false" onAction="#abrirSalvarCsv" prefHeight="25.0" prefWidth="150.0" text="Salvar Dados em CSV">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
                <Button layoutX="14.0" layoutY="310.0" mnemonicParsing="false" onAction="#lerArquivoSemExtensao" prefHeight="25.0" prefWidth="225.0" text="Carregar Dados">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
                <Button layoutX="14.0" layoutY="361.0" onAction="#salvarDadosEmJson" prefHeight="25.0" prefWidth="150.0" text="Salvar Dados em JSON">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
            </children>
        </AnchorPane>
    </children>
</VBox>
